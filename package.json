{
	"name": "supakit",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"db:generate": "drizzle-kit generate:pg",
		"db:introspect": "drizzle-kit introspect:pg",
		"db:migrate": "pnpm run exec ./drizzle/migrate.ts",
		"db:studio": "drizzle-kit studio",
		"exec": "vite-node --options.transformMode.ssr='/.*/'"
	},
	"dependencies": {
		"@supabase/auth-helpers-sveltekit": "^0.10.1",
		"@supabase/auth-ui-shared": "^0.1.6",
		"@supabase/auth-ui-svelte": "^0.2.2",
		"@supabase/supabase-js": "^2.26.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.27.2",
		"postgres": "^3.3.5",
		"svelte-sonner": "^0.1.2",
		"tailwindcss-animate": "^1.0.6"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.3",
		"@tailwindcss/forms": "^0.5.4",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"autoprefixer": "^10.4.14",
		"drizzle-kit": "^0.19.10",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.32.4",
		"postcss": "^8.4.27",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.1.1",
		"svelte-check": "^3.4.6",
		"sveltekit-superforms": "^1.4.0",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"vite": "^4.4.6",
		"vite-node": "^0.33.0",
		"zod": "^3.21.4"
	}
}
